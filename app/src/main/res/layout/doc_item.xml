<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_element"
    >


    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/img_source_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/document_conduct"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txt_element_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_image"
        android:text="Код"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt_element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Наименование"
        android:layout_alignLeft="@+id/txt_element_code"
        android:layout_below="@+id/txt_element_code"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/txt_element_name"
        android:layout_toLeftOf="@+id/txt_unit"
        android:layout_toStartOf="@+id/txt_unit" />
    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/txt_amount"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/txt_element_name"
        android:layout_alignParentEnd="true" />

</RelativeLayout>